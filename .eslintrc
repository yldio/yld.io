{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:testcafe/recommended"
  ],
  "plugins": ["react-hooks", "testcafe"],
  "rules": {
    "react/prop-types": 0,
    "space-before-function-paren": 0,
    "indent": 0,
    "react-hooks/rules-of-hooks": "error"
  },
  "env": {
    "jest": true,
    "browser": true
  },
  "settings": {
    "react": {
      "version": "16.0"
    }
  }
}
